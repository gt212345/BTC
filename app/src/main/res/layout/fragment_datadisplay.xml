            android:id="@+id/zd_sd"
            flatui:theme="@array/blood"
            flatui:textAppearance="light"
            flatui:fontFamily="roboto"
            flatui:fontWeight="bold"
            flatui:fontExtension="ttf"
            flatui:backgroundColor="main"
            flatui:cornerRadius="3dp"
            flatui:size="5dp"
            flatui:textColor="light"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        xmlns:flatui="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            android:src="@drawable/angle"/>
        <com.cengalabs.flatui.views.FlatTextView
            android:layout_marginRight="3dp"
            flatui:theme="@array/orange"
            flatui:textAppearance="light"
            flatui:fontFamily="roboto"
            flatui:fontWeight="bold"
            flatui:fontExtension="ttf"
            flatui:backgroundColor="main"
            flatui:cornerRadius="3dp"
            flatui:size="5dp"
            flatui:textColor="light"
            android:gravity="center"
            android:textSize="14sp"
            android:text="@string/xd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.cengalabs.flatui.views.FlatTextView
